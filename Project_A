// Project A

package ECTE331_Project_A;

import java.awt.Color;
import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Main {
	public static void main(String[] args) throws IOException {
		// path of the image
		String sourceimage = "TenCardG.jpg";

		// Creating a file for the image file to be viewed later
		File object = new File(sourceimage);

		// Reading the object into a bufferred_image object
		BufferedImage image = ImageIO.read(object);

		if(image!=null)
		{
			System.out.println("Image read successfully");
			System.out.println("Width = " + image.getWidth()+ " Height = " + image.getHeight());
		}

		int height = image.getHeight();
		int width = image.getWidth();
		int[][] pixelArray = new int[height][width];

		for (int y = 0; y < height; y++) 
		{
			for (int x = 0; x < width; x++) 
			{
				// Get RGB value of the pixel
				int rgb = image.getRGB(x, y);
				// Store the RGB value in the array
				pixelArray[y][x] = rgb;
			}
		}

		// to print the entire array of pixels
		for (int i = 0; i<height; i++)
		{
			for (int j = 0; j<width; j++)
			{
				//System.out.println(pixelArray[i][j]); 
			}
		}

		// draw a box
		int boxX = 100; // X coordinate of the top-left corner
		int boxY = 100; // Y coordinate of the top-left corner
		int boxWidth = 200; // Width of the rectangle
		int boxHeight = 200; // Height of the rectangle
		int boxColor = Color.black.getRGB(); // Color of the box

		// Draw the top and bottom lines of the box
		for (int x = boxX; x < boxX + boxWidth; x++) {
			if (x < width) {
				if (boxY < height) {
					pixelArray[boxY][x] = boxColor; // Top line
				}
				if (boxY + boxHeight < height) {
					pixelArray[boxY + boxHeight][x] = boxColor; // Bottom line
				}
			}
		}

		// Draw the left and right lines of the box
		for (int y = boxY; y < boxY + boxHeight; y++) {
			if (y < height) {
				if (boxX < width) {
					pixelArray[y][boxX] = boxColor; // Left line
				}
				if (boxX + boxWidth < width) {
					pixelArray[y][boxX + boxWidth] = boxColor; // Right line
				}
			}
		}

		// Write the modified pixel array back to the BufferedImage
		for (int y = 0; y < height; y++) {
			for (int x = 0; x < width; x++) {
				image.setRGB(x, y, pixelArray[y][x]);
			}
		}
		
		String outputPath = "TenCardG2";
		// Optional: Save the modified image to a new file
		File outputFile = new File(outputPath);
		ImageIO.write(image, "jpg", outputFile);

		System.out.println("Box drawn and image saved to: " + outputPath);
		
	
	} 
}

